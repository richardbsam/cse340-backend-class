
<h1><%= title %></h1>
<% if (typeof message !== 'undefined') { %>
    <div class="flash-message">
      <%= message %>
    </div>
  <% } %>






<form action="/inv/add-inventory" method="POST" id="addInventoryForm">

  <label for="classification_id">Classification:</label>
  <%- classificationList %>

  <label for="make">Make:</label>
  <input type="text" id="make" name="inv_make" value="<%= inv_make ? inv_make : '' %>" required>

  <label for="model">Model:</label>
  <input type="text" id="model" name="inv_model" value="<%= inv_model ? inv_model : '' %>" required>

  <label for="description">Description:</label>
  <textarea id="description" name="inv_description" required><%= inv_description ? inv_description : '' %></textarea>

  <label for="image">Image Path:</label>
  <input type="text" id="image" name="inv_image" value="<%= inv_image ? inv_image : '/images/no-image.png' %>" required>

  <label for="thumbnail">Thumbnail Path:</label>
  <input type="text" id="thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail ? inv_thumbnail : '/images/no-image-thumb.png' %>" required>

  <label for="price">Price:</label>
  <input type="number" id="price" name="inv_price" value="<%= inv_price ? inv_price : '' %>" required min="0" step="0.01">

  <label for="miles">Miles:</label>
  <input type="number" id="miles" name="inv_miles" value="<%= inv_miles ? inv_miles : '' %>" required min="0">

  <label for="color">Color:</label>
  <input type="text" id="color" name="inv_color" value="<%= inv_color ? inv_color : '' %>" required>

  <button type="submit">Add Vehicle</button>
</form>

<script>
  // Client-side validation
  document.getElementById('addInventoryForm').addEventListener('submit', function (event) {
    const make = document.getElementById('make').value.trim();
    const model = document.getElementById('model').value.trim();
    const price = document.getElementById('price').value;
    const miles = document.getElementById('miles').value;
    const color = document.getElementById('color').value.trim();
    
    if (!make || !model || price <= 0 || miles < 0 || !color) {
      alert('Please fill out all fields correctly.');
      event.preventDefault();
    }
  });
</script>

